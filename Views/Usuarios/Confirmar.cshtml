@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Orsys - Confirmar cuenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: hsl(218, 41%, 15%);
            color: white;
        }
        .container {
            margin-top: 3rem;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert @(ViewBag.Mensaje.Contains("Error") ? "alert-danger" : "alert-success")">
                <p>@ViewBag.Mensaje</p>
                @if (!ViewBag.Mensaje.Contains("Error"))
                {
                    <a class="btn btn-success" href="@Url.Action("Login", "Login")">Ingresar</a>
                }
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <p>No se pudo procesar su solicitud.</p>
            </div>
        }
    </div>


</body>
</html>


