@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Order System build in .NET CORE" />
    <meta name="author" content="Bymadrigal" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/css/Login.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script> 
</head>
<body >
   
        <div class="logo-container">
        <img src="~/assets/img/logo_Ordsys1.png" alt="ORDSYS" />
        </div>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form action="@Url.Action("Restablecer","Usuarios")" method="post">
                <h1>Olvidaste tu contraseña</h1>
                <br />
                <span>Usa tu correo electronico para restablecer tu cuenta.</span>
                <br />
                <input name="correo" type="email" placeholder="Correo electronico.">
                <br />
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Mensaje
                    </div>
                }
                @if (ViewBag.MensajeRestablecido != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.MensajeRestablecido
                    </div>
                }
                <button type="submit">Enviar</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form action="@Url.Action("Login","Login")" method="post">
                <h1>Iniciar sesion</h1>
                <br>
                <span>Usa tu correo electronico y contraseña.</span>
                <br>
                <input type="email" name="Correo" placeholder="Correo electronico">
                <input type="password" name="Clave" placeholder="Contraseña">
                <br>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                }
                @if (ViewBag.MensajeRestablecido != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.MensajeRestablecido
                    </div>
                }
                <button type="submit">Iniciar sesion</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Bienvenido de nuevo!</h1>
                    <p>
                        Ingresa tus credenciales para ingresar al sistema.
                    </p>
                    <button class="hidden" id="login">Iniciar sesion</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Olvidaste tu contraseña, No te preocupes!</h1>
                    <p>
                        Usa tu correo electronico asociado a tu cuenta para restablecer tu contraseña.
                    </p>
                    <button class="hidden" id="register">Olvide mi contraseña.</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/login.js"></script>
</body>
</html>