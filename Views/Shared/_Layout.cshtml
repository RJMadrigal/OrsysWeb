

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Ordenes</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @* <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" /> *@

    <link href="~/css/estilo.css" rel="stylesheet" />

    @await RenderSectionAsync("Estilos", required: false)
</head>

<body>
    
    <div class="layout">
        <!-- Barra lateral -->
        <aside class="sidebar">
            <div class="menu">


                
                <!--VISTAS DE ADMIN-->
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Index" asp-controller="Usuarios" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-file-alt"></i>
                            <span>Usuarios</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                }
                


                <!--VISTAS DE EMPLEADO NORMAL-->
                @if (User.IsInRole("Empleado"))
                {
                    <a asp-action="Crear" asp-controller="OrdenesEmpleado" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-file-alt"></i>
                            <span>Crear orden</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-action="Index" asp-controller="OrdenesEmpleado" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Ordenes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-action="Reportes" asp-controller="OrdenesEmpleado" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-chart-pie"></i>
                            <span>Reportes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                }
                

                <!--VISTAS DE JEFE DE USUARIO & JEFE APROBADOR-->
                @if (User.IsInRole("Jefe"))
                {
                    <a asp-action="Index" asp-controller="OrdenesJefes" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Ordenes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-action="Reportes" asp-controller="OrdenesJefes" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-chart-pie"></i>
                            <span>Reportes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                }
                


                <!--VISTAS DE JEFE DE USUARIO & JEFE FINANCIERO-->
                @if (User.IsInRole("Jefe aprobador 1") || User.IsInRole("Jefe aprobador 2") || User.IsInRole("Jefe aprobador 3"))
                {
                    <a asp-action="Index" asp-controller="OrdenesJefes" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Ordenes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-action="Reportes" asp-controller="OrdenesJefes" style="text-decoration: none">
                        <div class="menu-item">
                            <i class="fas fa-chart-pie"></i>
                            <span>Reportes</span>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </a>
                }
                


            </div>
            <div class="menu-footer">
                <a asp-action="" asp-controller="" style="text-decoration: none">
                    <div class="menu-item">
                        <i class="fas fa-info-circle"></i>
                        <span>Acerca de</span>
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </a>

                <a asp-action="Login" asp-controller="Login" style="text-decoration: none">
                    <div class="menu-item">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Salir</span>
                        <i class="fas fa-chevron-right"></i>
                    </div>

                </a>
                
            </div>
        </aside>

        <!-- Contenido dinámico -->
        <div class="main-content bg-black" style="color:white">
            @RenderBody()
        </div>
    </div>

    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/datatables-simple-demo.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



